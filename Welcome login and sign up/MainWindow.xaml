<Window x:Class="Welcome_login_and_sign_up.WelcomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Welcome" Height="250" Width="350" WindowStartupLocation="CenterScreen" Background="#2D2F33">
    <Grid>
        <TextBlock Text="Welcome" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,30,0,0" FontSize="28" FontWeight="Bold"
                   Foreground="#EDEDED"/>

        <Button Content="Sign Up" HorizontalAlignment="Left" Margin="60,120,0,0" VerticalAlignment="Top" Width="100" Height="40"
                Background="#4CAF50" Foreground="White" FontWeight="Bold" BorderBrush="#3A3A3A" BorderThickness="1" 
                Click="SignUpButton_Click"/>

        <Button Content="Login" HorizontalAlignment="Right" Margin="0,120,60,0" VerticalAlignment="Top" Width="100" Height="40"
                Background="#2196F3" Foreground="White" FontWeight="Bold" BorderBrush="#3A3A3A" BorderThickness="1" 
                Click="LoginButton_Click"/>

        <Border HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" Height="2" Width="200" Background="#4CAF50"/>
    </Grid>
</Window>
